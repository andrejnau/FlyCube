{
    "version": 3,
    "configurePresets": [
        {
            "name": "default"
        },
        {
            "name": "gcc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "macOS",
            "generator": "Xcode"
        },
        {
            "name": "iOS",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_SYSROOT": "iphoneos",
                "CMAKE_XCODE_ATTRIBUTE_SUPPORTED_PLATFORMS": "iphoneos"
            }
        },
        {
            "name": "iSimulator",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_SYSROOT": "iphonesimulator",
                "CMAKE_XCODE_ATTRIBUTE_SUPPORTED_PLATFORMS": "iphonesimulator"
            }
        },
        {
            "name": "tvOS",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "tvOS",
                "CMAKE_OSX_SYSROOT": "appletvos",
                "CMAKE_XCODE_ATTRIBUTE_SUPPORTED_PLATFORMS": "appletvos"
            }
        },
        {
            "name": "tvSimulator",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "tvOS",
                "CMAKE_OSX_SYSROOT": "appletvsimulator",
                "CMAKE_XCODE_ATTRIBUTE_SUPPORTED_PLATFORMS": "appletvsimulator"
            }
        }
    ]
}
